{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@svendros/*": ["src/server/vendors/*"],
      "@sutils/*": ["src/server/utils/*"],
      "@server/*": ["src/server/*"],

      "@cutils": ["src/client/utils/index"],
      "@cutils/*": ["src/client/utils/*"],
      "@cvendors/*": ["src/client/vendors/*"],
      "@client/*": ["src/client/*"],

      "@root/*": ["./*"]
    }
  },
  "include": ["src"]
}
